---
import '../styles/global.css';
import { PROFILE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/portfolio/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    	<title>{PROFILE.title}</title>

		 <meta
      name="description"
      content={PROFILE.description}
    />
    <meta name="author" content="Henry Chung" />
    <meta name="theme-color" content="#d7d7da" />

    <!-- Open Graph tags -->
    <meta property="og:title" content={PROFILE.og.title} />
    <meta
      property="og:description"
      content={PROFILE.og.description}
    />
    <meta property="og:type" content={PROFILE.og.type} />
    <meta
      property="og:url"
      content={PROFILE.og.url}
    />
    <meta
      property="og:image"
      content={PROFILE.og.image}
    />
    <meta
      property="og:image:alt"
      content={PROFILE.og.imageAlt}
    />
    <meta property="og:locale" content={PROFILE.og.locale} />

    <!-- poppins font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Henry Chung",
        "url": "https://henrychung98.github.io/portfolio/",
        "jobTitle": "Software Engineer",
        "sameAs": [
          "https://github.com/HenryChung98",
          "https://www.linkedin.com/in/henry-chung-cs/",
          "https://henrychung98.github.io/blog"
        ],
        "knowsAbout": [
          "JavaScript",
          "TypeScript",
          "React",
          "Next.js",
          "PostgreSQL"
        ]
      }
    </script>
	</head>
	<body>
		<slot />
	</body>
</html>
