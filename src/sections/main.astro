---

<section id="home" class="md:sticky top-0 mt-24 md:mt-0 h-fit md:h-screen text-card-foreground bg-primary/20 rounded-xl md:rounded-none m-4 md:m-0 md:overflow-y-auto">
    <div class="flex flex-col gap-5 p-5">
        <img src={MainPicture.src} alt="main-picture" class="w-30 h-30 rounded-3xl mb-4" />
        <div>
            <p class="text-xl text-foreground font-bold mb-2">Henry Chung</p>
            <p class="text-sm text-foreground/80 mb-2">Software Engineer</p>
            <p class="text-xs text-foreground/80 mb-5">Specializing in full-stack development</p>
            {contactInfo.map((contact) => (
                contact.href ? (
                    <a 
                        href={contact.href} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="flex items-center gap-2 mb-2 text-muted-foreground hover:text-primary transition-colors"
                    >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d={contact.icon} />
                        </svg>
                        <span class="text-xs">{contact.value}</span>
                    </a>
                ) : (
                    <div class="flex items-center gap-2 mb-2 text-muted-foreground">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d={contact.icon} />
                        </svg>
                        <span class="text-xs">{contact.value}</span>
                    </div>
                )
            ))}
           
        </div>
        <a
            href="/henry-portfolio/Hyungyu_Chung_Resume.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="w-full inline-flex justify-center border-2 rounded-full text-primary hover:bg-primary/10 transition-colors"
        >
        Resume
        </a>
        <!-- social links -->
        <div class="flex justify-center gap-3 m-3">
  {socialLinks.map((link) => (
    <a 
      href={link.href}
      target="_blank"
      rel="noopener noreferrer"
      class="relative group bg-primary/50 p-3 rounded-full hover:bg-primary/20 transition-colors duration-200"
      aria-label={link.label}
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d={link.icon} />
      </svg>
      <span class="absolute -bottom-5 left-1/2 -translate-x-1/2 bg-muted text-muted-foreground text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap">
        {link.label}
      </span>
    </a>
  ))}
</div>
        <!-- nav buttons -->
        <nav class="hidden md:flex md:flex-col gap-2 select-none">
          <ul class="grid grid-cols-2 gap-2">
                {NAV_ITEMS.slice(1).map((item) => (
                    <li class="nav-button bg-background rounded-xl w-full cursor-pointer hover:text-primary transition-colors duration-200">
                        <a
                        href={`#${item.id}`}
                        class="flex items-center gap-3 p-2"
                        >
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d={item.icon} />
                            </svg>
                            <span>{item.text}</span>
                        </a>
                    </li>
                ))}
            </ul>
        </nav>
    </div>
</section>

